{
  "name": "quienatiende-monorepo",
  "version": "0.1.0",
  "description": "QuienAtiende - Citizen Attendance Tracker for Government Officials",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter='!./packages/automation' run build",
    "test": "pnpm -r --filter='!./packages/automation' run test",
    "dev": "pnpm -r  --parallel --filter='!./packages/automation' run dev",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "format:check": "pnpm -r run format:check"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.0"
  }
}
