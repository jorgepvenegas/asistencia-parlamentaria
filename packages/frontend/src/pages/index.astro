---
import BaseLayout from '../layouts/BaseLayout.astro';
import StackedChart from '../components/StackedChart.astro';
import PartyFilter from '../components/PartyFilter.astro';

const API_URL = import.meta.env.API_URL || 'http://localhost:3000';

interface Politician {
  id: number;
  name: string;
  party_id: string;
  position?: string;
  percentage_attended: number;
  attended_count: number;
  unattended_count: number;
  excused_count: number;
}

interface Party {
  id: string;
  name: string;
  slug: string;
  color: string;
  abbreviation?: string;
}

export interface Attendance {
  politicianId: number;
  attendanceCount: number;
  absentCount: number;
  justifiedAbsentCount: number;
  unjustifiedAbsentCount: number;
}

// Fetch data from API
let politicians: Politician[] = [];
let parties: Party[] = [];
let attendance: Attendance[] = [];
let currentYear = new Date().getFullYear();
let error: string | null = null;
let selectedParties: string[] = [];

// Get party filter from URL
const url = new URL(Astro.request.url);
const partiesParam = url.searchParams.get('parties');
if (partiesParam) {
  selectedParties = partiesParam.split(',').filter((id) => id.trim().length > 0);
}

try {
  // Build query string with filters
  let queryParams = `year=${currentYear}&limit=400`;
  if (selectedParties.length > 0) {
    queryParams += `&party_id=${selectedParties[0]}`; // API supports single party_id param
  }

  // Fetch politicians with attendance data
  const politiciansRes = await fetch(`${API_URL}/api/politicians?${queryParams}`);

  if (politiciansRes.ok) {
    const data = await politiciansRes.json();
    politicians = data.data || [];
  } else {
    error = 'Failed to load politicians data';
  }

  // Fetch parties for color coding
  const partiesRes = await fetch(`${API_URL}/api/parties`);
  if (partiesRes.ok) {
    const data = await partiesRes.json();
    parties = data.data || [];
  }

  // Fetch attendance
  const attendanceRes = await fetch(`${API_URL}/api/attendance/yearly?year=2025`);
  if (attendanceRes.ok) {
    const data = await attendanceRes.json();
    attendance = data.data || [];
    // console.log(attendance[0])
  }

} catch (err) {
  error = 'Error connecting to server';
  console.error(err);
}

// Calculate statistics
const totalPoliticians = politicians.length;
// const averageAttendance = totalPoliticians > 0
//   ? (politicians.reduce((sum, p) => sum + p.percentage_attended, 0) / totalPoliticians).toFixed(1)
//   : 0;

const totalParties = parties.length;

// Find top and bottom performers
// const sorted = [...politicians].sort((a, b) => b.percentage_attended - a.percentage_attended);
// const topPerformers = sorted.slice(0, 5);
// const bottomPerformers = sorted.slice(-5).reverse();

// Prepare chart data
const chartData = attendance.map(({absentCount, attendanceCount, justifiedAbsentCount, politicianId, unjustifiedAbsentCount}) => ({
  politicianId,
  politicianName: getPoliticianName(politicianId),
  attendanceCount,
  absentCount,
  justifiedAbsentCount,
  unjustifiedAbsentCount
  // name: p.name.split(' ')[0], // First name only for space
  // attended: p.attended_count,
  // unattended: p.unattended_count,
  // excused: p.excused_count,
  // percentage: p.percentage_attended,
}));

// Get party name by ID
// function getPartyName(partyId: string): string {
//   return parties.find(p => p.id === partyId)?.name || partyId;
// }

// Get politician by ID
function getPoliticianName(politicianId: number): string | number {
  return politicians.find(p => p.id === politicianId)?.name || politicianId;
}

