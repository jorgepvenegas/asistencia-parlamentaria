---
import BaseLayout from '../../layouts/BaseLayout.astro';

const API_URL = import.meta.env.API_URL || 'http://localhost:3000';

// Get year and month from URL params
const { year, month } = Astro.params;
const yearNum = parseInt(year || '2026', 10);
const monthNum = parseInt(month || '1', 10);

// Validate inputs
if (!year || !month || isNaN(yearNum) || isNaN(monthNum) || monthNum < 1 || monthNum > 12) {
  return Astro.redirect('/');
}

interface AttendanceRecord {
  date: string;
  status: 'attended' | 'unattended' | 'excused';
  reason?: string;
}

interface PoliticianMonthly {
  id: string;
  name: string;
  party_id: string;
  position?: string;
  records: AttendanceRecord[];
  attended_count: number;
  unattended_count: number;
  excused_count: number;
  percentage: number;
}

interface Party {
  id: string;
  name: string;
  color: string;
}

// Month name mapping
const monthNames = [
  '', 'January', 'February', 'March', 'April', 'May', 'June',
  'July', 'August', 'September', 'October', 'November', 'December'
];
const monthNameEs = [
  '', 'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
  'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'
];

// Fetch all politicians and their attendance for this month
let politicians: PoliticianMonthly[] = [];
let parties: Party[] = [];
let error: string | null = null;
const isCurrentMonth = new Date().getFullYear() === yearNum && new Date().getMonth() + 1 === monthNum;

try {
  // Get list of all politicians
  const politiciansRes = await fetch(
    `${API_URL}/api/politicians?year=${yearNum}&limit=400`
  );
  if (!politiciansRes.ok) {
    throw new Error('Failed to fetch politicians');
  }

  const politiciansData = await politiciansRes.json();
  const allPoliticians = politiciansData.data || [];

  // Fetch attendance records for each politician
  const politicianRecords: PoliticianMonthly[] = [];

  for (const politician of allPoliticians) {
    try {
      const attendanceRes = await fetch(
        `${API_URL}/api/politicians/${politician.id}/attendance?year=${yearNum}&month=${monthNum}`
      );

      if (attendanceRes.ok) {
        const attendanceData = await attendanceRes.json();
        const records = attendanceData.data || [];

        // Calculate statistics
        const attended_count = records.filter(
          (r: AttendanceRecord) => r.status === 'attended'
        ).length;
        const unattended_count = records.filter(
          (r: AttendanceRecord) => r.status === 'unattended'
        ).length;
        const excused_count = records.filter(
          (r: AttendanceRecord) => r.status === 'excused'
        ).length;
        const total = records.length;
        const percentage = total > 0 ? (attended_count / total) * 100 : 0;

        politicianRecords.push({
          id: politician.id,
          name: politician.name,
          party_id: politician.party_id,
          position: politician.position,
          records: records.sort((a: AttendanceRecord, b: AttendanceRecord) =>
            new Date(b.date).getTime() - new Date(a.date).getTime()
          ),
          attended_count,
          unattended_count,
          excused_count,
          percentage,
        });
      }
    } catch (err) {
      console.error(`Error fetching attendance for ${politician.id}:`, err);
    }
  }

  politicians = politicianRecords.sort((a, b) => b.percentage - a.percentage);

  // Fetch parties for color coding
  const partiesRes = await fetch(`${API_URL}/api/parties`);
  if (partiesRes.ok) {
    const partiesData = await partiesRes.json();
    parties = partiesData.data || [];
  }
} catch (err) {
  error = 'Error loading attendance data';
  console.error(err);
}

// Get party name and color
function getParty(partyId: string): Party | undefined {
  return parties.find(p => p.id === partyId);
}

// Format date for display
function formatDate(dateStr: string): string {
  const date = new Date(dateStr + 'T00:00:00');
  return date.toLocaleDateString('es-CR', {
    weekday: 'short',
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
  });
}

// Get status badge color
function getStatusColor(status: string): string {
  switch (status) {
    case 'attended':
      return 'bg-green-100 text-green-800 border-green-300';
    case 'excused':
      return 'bg-amber-100 text-amber-800 border-amber-300';
    case 'unattended':
      return 'bg-red-100 text-red-800 border-red-300';
    default:
      return 'bg-gray-100 text-gray-800 border-gray-300';
  }
}
---

<BaseLayout title={`Asistencia ${monthNameEs[monthNum]} ${yearNum} - QuienAtiende`}>
  <div class="space-y-8">
    <!-- Page Header -->
    <section>
      <div class="flex items-center gap-2 mb-2">
        <a href="/" class="text-brand-600 hover:text-brand-700 font-medium">← Volver</a>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">
        Asistencia {monthNameEs[monthNum]} {yearNum}
      </h1>
      <p class="text-xl text-gray-600">
        Detalles diarios de asistencia parlamentaria
      </p>
      {isCurrentMonth && (
        <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg text-yellow-800 text-sm">
          ⚠️ Nota: Los datos del mes actual pueden estar incompletos. Se actualiza diariamente.
        </div>
      )}
    </section>

    {error && (
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-800">
        <p class="font-semibold">Error al cargar datos</p>
        <p class="text-sm">{error}</p>
      </div>
    )}

    {!error && politicians.length > 0 && (
      <>
        <!-- Summary Statistics -->
        <section class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-6 border border-green-200">
            <p class="text-sm text-green-700 font-medium mb-1">Diputados con datos</p>
            <p class="text-3xl font-bold text-green-900">{politicians.length}</p>
          </div>
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-6 border border-blue-200">
            <p class="text-sm text-blue-700 font-medium mb-1">Sesiones registradas</p>
            <p class="text-3xl font-bold text-blue-900">
              {politicians.reduce((sum, p) => sum + p.records.length, 0)}
            </p>
          </div>
          <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-6 border border-purple-200">
            <p class="text-sm text-purple-700 font-medium mb-1">Asistencia promedio</p>
            <p class="text-3xl font-bold text-purple-900">
              {politicians.length > 0
                ? (politicians.reduce((sum, p) => sum + p.percentage, 0) / politicians.length).toFixed(1)
                : 0}%
            </p>
          </div>
        </section>

        <!-- Politicians Attendance Detail -->
        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Detalles por Diputado</h2>
          <div class="space-y-6">
            {politicians.map(politician => {
              const party = getParty(politician.party_id);
              const sortedRecords = politician.records.sort(
                (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()
              );

              return (
                <div class="bg-white rounded-lg border border-gray-200 overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                  <!-- Politician Header -->
                  <div class="px-6 py-4 border-b border-gray-200" style={party ? `border-left: 4px solid ${party.color}` : ''}>
                    <div class="flex items-start justify-between">
                      <div>
                        <h3 class="text-lg font-semibold text-gray-900">{politician.name}</h3>
                        <div class="flex gap-4 mt-1 text-sm text-gray-600">
                          <span>{party?.name || 'Unknown Party'}</span>
                          {politician.position && <span>{politician.position}</span>}
                        </div>
                      </div>
                      <div class="text-right">
                        <p class="text-3xl font-bold text-gray-900">
                          {politician.percentage.toFixed(1)}%
                        </p>
                        <p class="text-xs text-gray-500 mt-1">Asistencia</p>
                      </div>
                    </div>

                    <!-- Quick Stats -->
                    <div class="grid grid-cols-3 gap-3 mt-4">
                      <div class="bg-green-50 p-2 rounded text-center">
                        <p class="text-xs text-gray-600">Presente</p>
                        <p class="font-bold text-green-600">{politician.attended_count}</p>
                      </div>
                      <div class="bg-red-50 p-2 rounded text-center">
                        <p class="text-xs text-gray-600">Ausente</p>
                        <p class="font-bold text-red-600">{politician.unattended_count}</p>
                      </div>
                      <div class="bg-amber-50 p-2 rounded text-center">
                        <p class="text-xs text-gray-600">Justificado</p>
                        <p class="font-bold text-amber-600">{politician.excused_count}</p>
                      </div>
                    </div>
                  </div>

                  <!-- Attendance Records -->
                  {sortedRecords.length > 0 ? (
                    <div class="px-6 py-4">
                      <div class="space-y-2">
                        {sortedRecords.map(record => (
                          <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                            <div>
                              <p class="font-mono text-sm text-gray-600">{formatDate(record.date)}</p>
                            </div>
                            <div class="flex-1">
                              <span class={`inline-block px-3 py-1 rounded-full text-sm font-medium border ${getStatusColor(record.status)}`}>
                                {record.status === 'attended' && 'Presente'}
                                {record.status === 'unattended' && 'Ausente'}
                                {record.status === 'excused' && 'Justificado'}
                              </span>
                              {record.reason && (
                                <p class="text-xs text-gray-600 mt-1">Razón: {record.reason}</p>
                              )}
                            </div>
                          </div>
                        ))}
                      </div>
                    </div>
                  ) : (
                    <div class="px-6 py-4 text-center text-gray-500">
                      <p class="text-sm">No hay datos de asistencia para este mes</p>
                    </div>
                  )}
                </div>
              );
            })}
          </div>
        </section>

        <!-- Legend -->
        <section class="bg-gray-50 rounded-lg border border-gray-200 p-6">
          <h3 class="font-semibold text-gray-900 mb-3">Leyenda</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <span class="inline-block px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800 border border-green-300">
                Presente
              </span>
              <p class="text-xs text-gray-600 mt-1">Asistió a la sesión</p>
            </div>
            <div>
              <span class="inline-block px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800 border border-red-300">
                Ausente
              </span>
              <p class="text-xs text-gray-600 mt-1">Ausente sin justificación</p>
            </div>
            <div>
              <span class="inline-block px-3 py-1 rounded-full text-sm font-medium bg-amber-100 text-amber-800 border border-amber-300">
                Justificado
              </span>
              <p class="text-xs text-gray-600 mt-1">Ausente con justificación (enfermedad, viaje, etc.)</p>
            </div>
          </div>
        </section>
      </>
    )}

    {!error && politicians.length === 0 && (
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
        <p class="text-yellow-800">No hay datos disponibles para {monthNameEs[monthNum]} {yearNum}.</p>
      </div>
    )}
  </div>
</BaseLayout>
