---
import { Attendance } from '@/pages/index.astro';
import StackedChartReact from './StackedChart.tsx';

export interface ChartData extends Attendance {
  politicianName: string;
}

interface Props {
  data: Array<ChartData>;
  title?: string;
}

const { data, title = 'Attendance Distribution' } = Astro.props;
---

<StackedChartReact data={data} title={title} client:load />

<style is:global>
  .recharts-tooltip {
    outline: none;
  }

  .recharts-default-tooltip {
    background-color: white !important;
    border: 1px solid #e5e7eb !important;
    border-radius: 0.5rem !important;
  }
</style>
